<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.produk.TambahEditProduct">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/productMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="New/Edit Product"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:columnCount="4"
            android:padding="4dp"
            android:rowCount="8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productMode">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Category" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Product Name" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Product price" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Product quantity" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Product Discount (%)  " />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Discount duration"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="until"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Product Picture" />

            <TextView
                android:id="@+id/editTextKategori"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:editable="false"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextProduct"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:ems="10"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPersonName"
                android:text="" />

            <EditText
                android:id="@+id/editTextHargaProduct"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:ems="10"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:numeric="integer"
                android:text="" />

            <EditText
                android:id="@+id/editTextJumlahProduct"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center"
                android:ems="10"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:numeric="integer"
                android:text="" />

            <EditText
                android:id="@+id/editTextDiskonProduct"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="center"
                android:ems="10"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:text="" />

            <TextView
                android:id="@+id/editTextDurasiAwalDiskonProduct"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="center"
                android:editable="false"
                android:ems="10"

                android:gravity="center"
                android:text="DD/MM/YYYY"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/editTextDurasiAkhirDiskonProduct"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_row="5"
                android:layout_column="3"
                android:layout_gravity="center"
                android:editable="false"
                android:ems="10"

                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:text="DD/MM/YYYY"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonTambahEditProduct"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="Product" />

            <ImageView
                android:id="@+id/previewProduct"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logomarikh" />


        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>