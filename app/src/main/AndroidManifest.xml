<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.marikhapp.marikhkasir">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon"
        tools:targetApi="m">
        <activity android:name=".activities.transaksi.DeskripsiPesanan.DeskripsiPesanan"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.transaksi.Transaksi"
            android:configChanges="orientation"
            android:label="@string/title_activity_transaksi"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.deskripsi.TambahEditDeskripsi"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.deskripsi.DaftarDeskripsi"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.kategori.TambahEditKategori"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.produk.TambahEditProduct"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.produk.DaftarProduct"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.kategori.KategoriMenagement"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.Main_Menu"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.Login"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>